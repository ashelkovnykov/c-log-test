<!DOCTYPE log4c SYSTEM "">

<log4c>

  <config>
    <bufsize>4096</bufsize>
    <debug level="0"/>
    <nocleanup>0</nocleanup>
  </config>

  <!-- layouts ============================================================= -->
  <layout name="basic" type="basic"/>

  <!-- file rotation policy ================================================ -->
  <rollingpolicy name="policy" type="sizewin" maxsize="26214400" maxnum="255" />

  <!-- appenders =========================================================== -->
  <appender name="file" type="rollingfile" logdir="logs" prefix="log4c" layout="dated" rollingpolicy="policy"/>

  <!-- categories ========================================================== -->
  <category name="0" priority="unknown" appender="file"/>
  <category name="1" priority="notset" appender="file"/>
  <category name="2" priority="trace" appender="file"/>
